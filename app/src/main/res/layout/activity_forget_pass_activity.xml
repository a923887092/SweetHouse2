<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gwm.sweethouse.ForgetPassACtivity">

    <RelativeLayout
        android:id="@+id/top_forgetPass"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="#ff0000"
        >
        <ImageButton
            android:id="@+id/ibtn_forgetToLogin"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow_return"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgetPaas"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_forgetLine1"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/top_forgetPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp">

        <EditText
            android:id="@+id/et_forgetPhone"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:hint="请输入手机号码"
            android:paddingLeft="5dp"
            android:layout_weight="3"
            android:background="@drawable/selector_bg_edittext"/>
        <Button
            android:id="@+id/btn_getForgetCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/selector_btn_reload"
            android:text="获取验证码"
            android:textColor="#fff"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/et_identForgetCode"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:hint="请输入验证码"
        android:paddingLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/ll_forgetLine1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_bg_edittext"/>


    <Button
        android:id="@+id/btn_nextForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_reload"
        android:text="下一步"
        android:textColor="#ffffff"
        android:layout_below="@id/et_identForgetCode"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_forgetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的原来的密码是:123456"
        android:textSize="20sp"
        android:textColor="#FB7070"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/btn_goLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_reload"
        android:text="去登陆"
        android:textColor="#ffffff"
        android:layout_below="@+id/tv_forgetPass"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
