<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gwm.sweethouse.view.NoFullScreenViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/tab_btn"
            android:drawableTop="@drawable/selector_tab_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_zhx"
            style="@style/tab_btn"
            android:drawableTop="@drawable/selector_tab_zhx"
            android:text="找装修" />

        <RadioButton
            android:id="@+id/rb_cart"
            style="@style/tab_btn"
            android:drawableTop="@drawable/selector_tab_cart"
            android:text="购物车" />

        <RadioButton
            android:id="@+id/rb_my"
            style="@style/tab_btn"
            android:drawableTop="@drawable/selector_tab_my"
            android:text="我的" />
    </RadioGroup>

</LinearLayout>
