<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="10dp"
            android:layout_height="11dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"
            android:layout_toRightOf="@id/tv_productName"
            android:layout_toEndOf="@id/tv_productName" />
        <TextView
            android:id="@+id/tv_orderState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FB7070"
            android:text="订单状态"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/iv_productImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_productDesc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="商品描述"
            android:layout_alignTop="@+id/iv_productImage"
            android:layout_toRightOf="@+id/iv_productImage"
            android:layout_toEndOf="@+id/iv_productImage"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计￥"
            android:layout_alignTop="@+id/tv_productPrice"
            android:layout_toLeftOf="@+id/tv_productPrice"
            android:layout_toStartOf="@+id/tv_productPrice" />
        <TextView
            android:id="@+id/tv_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="233.0"
            android:textColor="#FB7070"
            android:layout_alignTop="@+id/tv_productDesc"
            android:layout_alignRight="@+id/tv_buyCount"
            android:layout_alignEnd="@+id/tv_buyCount" />

        <TextView
            android:id="@+id/tv_buyCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单中商品数目及合计价格"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:layout_alignBottom="@+id/iv_productImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:background="@drawable/selector_btn_reload"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:background="@drawable/selector_btn_reload"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_1"
            android:layout_toStartOf="@+id/btn_1"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FB7070"/>

</LinearLayout>