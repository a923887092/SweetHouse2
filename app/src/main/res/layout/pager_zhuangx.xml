<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#d00000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找装修"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
  <ImageView
      android:layout_marginTop="0dp"
      android:src="@drawable/zzx_tab"
      android:layout_width="match_parent"
      android:layout_height="100dp" />
   <LinearLayout
       android:background="#fff"
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:orientation="horizontal">
       <LinearLayout
           android:id="@+id/ll_room"
           android:layout_width="0dp"
           android:layout_height="80dp"
           android:layout_weight="1"
           >
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/plug_center_plug_new"
                   />
           <ImageView
              android:layout_marginTop="18dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/xchd"
               android:layout_marginLeft="10dp"

               />
           </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
           <TextView
               android:textColor="#000"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="申请量房设计"
               android:textSize="16dp"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="7dp"
               />
           <TextView
               android:layout_marginTop="10dp"
               android:textSize="12dp"
               android:layout_marginLeft="7dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="3套方案 精挑细选"

               />
            </LinearLayout>
       </LinearLayout>

       <ImageView
           android:layout_width="1dp"
           android:layout_height="50dp"
           android:background="#ccc"
           android:layout_marginTop="15dp"
           />

       <LinearLayout
           android:id="@+id/ll_company"
           android:layout_width="0dp"
           android:layout_height="80dp"
           android:layout_weight="1">
           <ImageView
               android:layout_gravity="center_vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/pptm"
               android:layout_marginLeft="10dp"
               />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:textColor="#000"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="同城装修公司"
                   android:textSize="16dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="7dp"
                   />
               <TextView
                   android:layout_marginTop="10dp"
                   android:textSize="12dp"
                   android:layout_marginLeft="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="真实评价 安心托付"
                   />
           </LinearLayout>
       </LinearLayout>

   </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#70cccccc"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >
        <RelativeLayout
            android:id="@+id/rl_getpic"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageButton
                android:id="@+id/ibtn_kantu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_app_recommend_icon"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:textColor="#000"
                android:textSize="16dp"
                android:id="@+id/tv_kantu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看图装修"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/ibtn_kantu"
                android:layout_toRightOf="@+id/ibtn_kantu"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/ibtn_kantu"
                />
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tm_mytmall_icon_new"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView5"
                android:layout_toStartOf="@+id/imageView5" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView5" />
            <ImageView
                android:layout_width="345dp"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ibtn_kantu"
                android:layout_toEndOf="@+id/ibtn_kantu" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_calculator"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageButton
                android:id="@+id/ibtn_yusuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_feedback_icon"
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_alignBottom="@+id/imageView4" />
            <TextView
                android:textColor="#000"
                android:textSize="16dp"
                android:id="@+id/tv_yusuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预算审核"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/ibtn_yusuan"
                android:layout_toRightOf="@+id/ibtn_yusuan"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/ibtn_yusuan"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView4" />
            <ImageView
                android:layout_width="345dp"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ibtn_yusuan"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_buy"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageButton
                android:id="@+id/ibtn_caigou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_my_jd_assitant"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:textColor="#000"
                android:textSize="16dp"
                android:id="@+id/tv_caigou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="材料采购"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/ibtn_caigou"
                android:layout_toRightOf="@+id/ibtn_caigou"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/ibtn_caigou"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:layout_width="345dp"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ibtn_caigou"
                android:layout_toEndOf="@+id/ibtn_caigou" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_huangli"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageButton
                android:id="@+id/ibtn_rili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_my_jd_discuss"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:textColor="#000"
                android:textSize="16dp"
                android:id="@+id/tv_rili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="装修黄历"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/ibtn_rili"
                android:layout_toRightOf="@+id/ibtn_rili"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/ibtn_rili"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#70cccccc"
        />
    <RelativeLayout
        android:id="@+id/rl_kefu"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="45dp">
        <ImageButton
            android:id="@+id/ibtn_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/android_my_jd_service_manager"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:textColor="#000"
            android:textSize="16dp"
            android:id="@+id/tv_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人工客服"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/ibtn_kefu"
            android:layout_toRightOf="@+id/ibtn_kefu"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/ibtn_kefu"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_2"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70cccccc"
        />
</LinearLayout>
