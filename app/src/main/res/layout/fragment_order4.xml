<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.gwm.sweethouse.fragment.order.Order4Fragment">

    <com.gwm.sweethouse.view.RefreshLayout
        android:id="@+id/swipe_container4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.gwm.sweethouse.view.GridViewWithHeaderAndFooter
            android:numColumns="1"
            android:id="@+id/lv_order4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"/>
    </com.gwm.sweethouse.view.RefreshLayout>


    <TextView
        android:id="@+id/tv_failed4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="#ff0000"/>

    <ProgressBar
        android:id="@+id/progressBar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>
