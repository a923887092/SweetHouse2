<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gwm.sweethouse.OrderDetailActivity"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/top_orderDetail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0000">
        <ImageButton
            android:id="@+id/ibtn_dailToOrders"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow_return"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_orderDetail">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/top_orderDetail">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号:"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_detailOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="101"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E3E3E3"
                android:layout_marginLeft="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#FFE7BA">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/address_name_icon"
                    />
                <TextView
                    android:id="@+id/tv_detailUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="韦森"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="12dp"
                    />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:background="@drawable/address_mobile_icon"
                    android:layout_marginLeft="51dp"
                    android:layout_marginStart="51dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageView5"
                    android:layout_alignBottom="@+id/tv_detailMoboil"
                    android:layout_toRightOf="@id/tv_detailUserName"
                    android:layout_toEndOf="@id/tv_detailUserName" />
                <TextView
                    android:id="@+id/tv_detailMoboil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="132****5130"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_alignTop="@id/tv_detailUserName"
                    android:layout_toRightOf="@id/imageView5"
                    android:layout_toEndOf="@id/imageView5"/>
                <TextView
                    android:id="@+id/tv_orderAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="安徽省六安市裕安区鼓楼街惋惜学院本部,安徽省六安市裕安区鼓楼街惋惜学院本部"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_detailProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:background="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp" />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="15dp"
                    android:background="@drawable/arrow_right"
                    android:layout_alignBottom="@+id/tv_detailProductName"
                    android:layout_toRightOf="@+id/tv_detailProductName"
                    android:layout_toEndOf="@+id/tv_detailProductName"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E3E3E3" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/shape_layout">
                <ImageView
                    android:id="@+id/iv_detailProductImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_productDesc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="商品描述"
                    android:layout_alignBaseline="@+id/textView14"
                    android:layout_alignBottom="@+id/textView14"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计￥"
                    android:id="@+id/textView14"
                    android:layout_alignBaseline="@+id/tv_productPrice"
                    android:layout_alignBottom="@+id/tv_productPrice"
                    android:layout_toRightOf="@+id/tv_productDesc"
                    android:layout_toEndOf="@+id/tv_productDesc" />
                <TextView
                    android:id="@+id/tv_productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="233.0"
                    android:textColor="#FB7070"
                    android:layout_alignTop="@+id/iv_detailProductImage"
                    android:layout_toRightOf="@+id/textView14"
                    android:layout_toEndOf="@+id/textView14" />

                <TextView
                    android:id="@+id/tv_buyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单中商品数目"
                    android:layout_alignBottom="@+id/iv_detailProductImage"
                    android:layout_alignRight="@+id/tv_productPrice"
                    android:layout_alignEnd="@+id/tv_productPrice" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    android:padding="10dp"
                    android:id="@+id/textView10" />
                <TextView
                    android:id="@+id/tv_payType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货到付款"
                    android:layout_marginRight="41dp"
                    android:layout_marginEnd="41dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E3E3E3" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付款:"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_payNumb"
                    android:layout_toStartOf="@+id/tv_payNumb" />
                <TextView
                    android:id="@+id/tv_payNumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥556.5"
                    android:textSize="20sp"
                    android:textColor="#FB7070"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="28dp"
                    android:layout_marginEnd="28dp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E3E3E3" />
        </LinearLayout>
    </ScrollView>

