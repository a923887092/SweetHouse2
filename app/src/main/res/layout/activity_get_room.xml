<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_bar" />

        <TextView
            android:id="@+id/tv_liangfang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="免费量房设计"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </RelativeLayout>

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/tv_liangfang"
        android:background="@drawable/liangfang" />



    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_yuyue_bg2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/android_search_button_focused"
                android:gravity="center"
                android:textStyle="bold"
                android:text="现在预约，免费获得三套方案  "
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@drawable/shape_yuyue_bg">
            <EditText
                android:id="@+id/ed_chenghu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:background="@drawable/shape_liangfang_bg"
                android:hint="您的称呼"
                android:paddingLeft="10dp"
                android:layout_gravity="center" />

            <Spinner
                android:id="@+id/sp_adrr"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_liangfang_bg"
                android:layout_below="@+id/ed_chenghu"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                />

            <EditText
                android:id="@+id/ed_shouji"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_liangfang_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/sp_adrr"
                android:layout_marginTop="10dp"
                android:hint="请输入手机号"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/btn_getyzm"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:text="获取验证码"
                android:textColor="#d00"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textSize="16dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_above="@+id/ed_yanzheng"
                android:layout_alignRight="@+id/ed_yanzheng"
                android:layout_alignEnd="@+id/ed_yanzheng"
                android:onClick="getyzm"
                />
        <EditText
            android:id="@+id/ed_yanzheng"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_liangfang_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/ed_shouji"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:hint="请输入验证码"
            android:paddingLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"  />

            <Button
                android:id="@+id/btn_yuyue"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@+id/ed_yanzheng"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="立即预约"
                android:background="@drawable/selector_btn_yuyue"
                android:textSize="16dp"
                android:textColor="#fff"
                android:onClick="yuyue"
                 />

            <TextView
                android:id="@+id/tv_liaojie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_yuyue"
                android:text="拨打热线，快速了解SweetHouse装修"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#60000000"
                />
            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_liaojie"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                >
            <ImageButton
                android:id="@+id/ibtn_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone"
                android:layout_marginTop="5dp"
                android:background="@null"
                />
                <Button

                    android:id="@+id/btn_mumu"
                    android:layout_toRightOf="@+id/ibtn_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="188-5642-1058"
                    android:textColor="#d00"
                    android:textSize="18dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>