<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autoLink="all"

    >
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:background="#49767675">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#49767675"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="商品名称"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alimember_table_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#49767675">
        <ImageView
            android:id="@+id/goodsSrc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alipay_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="商品描述"
            android:padding="15dp"
            android:id="@+id/goodsdes" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="价格"
            android:gravity="right"
            android:padding="15dp"
            android:id="@+id/goodPrice" />

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="5dp"

        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="评价订单"
            android:id="@+id/orderReviewButton" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="删除订单"
            android:layout_gravity="right"
            android:id="@+id/orderDeleteButton"/>

    </LinearLayout>

</LinearLayout><!-- From: file:/F:/AndroidStudioWorkspace/SweetHouse2/app/src/main/res/layout/myorder_item.xml -->