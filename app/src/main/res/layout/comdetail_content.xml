<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/im_titlepic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        />
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_company_bg"
            android:id="@+id/rl_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司简介"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:textColor="#000"
                />
            <Button
                android:id="@+id/btn_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点我预约"
                android:textStyle="bold"
                android:background="@null"
                android:textSize="18dp"
                android:textColor="#d00"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="?android:attr/borderlessButtonStyle"
                />

        </RelativeLayout>
    <TextView
        android:layout_below="@+id/rl_new"
        android:id="@+id/tv_title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:textSize="15dp"
        android:textColor="#000"

        android:layout_marginTop="1dp"
        />
        <RelativeLayout
            android:id="@+id/rl_addr"
            android:layout_below="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000"
                android:paddingTop="8dp"
                android:paddingLeft="15dp"
                android:text="地址:"
                />
            <TextView
           android:layout_toRightOf="@+id/addr"
        android:id="@+id/tv_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#000"
        android:paddingTop="8dp"
        android:paddingLeft="5dp"
        />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/rl_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:text="联系电话:"
                android:textColor="#000"
                android:paddingBottom="10dp"
                />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:paddingTop="5dp"
        android:textColor="#000"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/tv_call"
        android:paddingBottom="10dp"
        />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shape_company_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="风格案例"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:textColor="#000"
        />
    </RelativeLayout>
</LinearLayout>