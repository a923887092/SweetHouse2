<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gwm.sweethouse.RegisterActivity2">
    <RelativeLayout

        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="#ff0000"
        android:id="@+id/relativeLayout">
        <ImageButton
            android:id="@+id/ibtn_toRegister"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow_return"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:onClick="toRegister"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_remind1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入初始密码"
        android:paddingLeft="5dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/selector_bg_edittext"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/et_remind2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请再次输入"
        android:paddingLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_bg_edittext"
        android:layout_below="@id/et_remind1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_commitRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_reload"
        android:text="确认注册"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:onClick="commitRegister"
        android:layout_below="@+id/et_remind2"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
