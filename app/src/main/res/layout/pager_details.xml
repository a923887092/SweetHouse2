<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_bar">

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_goods_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商品详情"
            android:textColor="#fff"
            android:textSize="20dp" />

    </RelativeLayout>
    <LinearLayout
        android:paddingTop="5dp"
        android:background="#fbfbfb"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ll_shop">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageButton
                android:layout_gravity="center_vertical"
                android:background="@drawable/shop_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_margin="8dp"
            android:background="#ccc"
            android:layout_width="1dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="加入购物车"
                android:background="@drawable/shape_cart_area"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginLeft="8dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="立即购买"
                android:background="@drawable/shape_shop_area"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_below="@id/rl_title"
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_shop">
    </FrameLayout>
</RelativeLayout>