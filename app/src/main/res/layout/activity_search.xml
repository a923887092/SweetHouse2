<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.gwm.sweethouse.SearchActivity">

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:clickable="true"
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="搜索"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/iv_back"
            android:layout_toLeftOf="@+id/tv_search"
            android:layout_toRightOf="@+id/iv_back"
            android:layout_toStartOf="@+id/iv_back"
            android:background="@drawable/bg_all_sel"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_city_click" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="@null"
                android:hint="搜索本站商品" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_search"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="热搜" />

    <TableLayout
        android:id="@+id/tl_hot"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hot">

        <TableRow
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <Button
                android:id="@+id/btn1"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="商城品牌日"
                android:background="@drawable/shape_btn_bg"
                android:layout_marginLeft="13dp"
                android:layout_weight="1" />

            <Button
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="晚8点开枪"
                android:background="@drawable/shape_btn_bg"
                android:layout_marginLeft="13dp"
                android:layout_weight="1" />

            <Button
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="热水器"
                android:background="@drawable/shape_btn_bg"
                android:layout_marginLeft="13dp"
                android:layout_weight="1" />

            <Button
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="浴霸"
                android:background="@drawable/shape_btn_bg"
                android:layout_marginLeft="13dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <Button
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="马桶"
                android:background="@drawable/shape_btn_bg"
                android:layout_marginLeft="13dp"
                android:layout_weight="1" />

            <Button
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="花洒"
                android:background="@drawable/shape_btn_bg"
                android:layout_marginLeft="13dp"
                android:layout_weight="1" />

            <Button
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="水槽"
                android:background="@drawable/shape_btn_bg"
                android:layout_marginLeft="13dp"
                android:layout_weight="1" />

            <Button
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="开关/插座"
                android:background="@drawable/shape_btn_bg"
                android:layout_marginLeft="13dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <Button
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="净水器"
                android:background="@drawable/shape_btn_bg"
                android:layout_marginLeft="13dp"
                android:layout_weight="1" />

            <Button
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="油漆涂料"
                android:background="@drawable/shape_btn_bg"
                android:layout_marginLeft="13dp"
                android:layout_weight="1" />
            <Button
                android:layout_weight="1"
                android:visibility="invisible"/>
            <Button
                android:layout_weight="1"
                android:visibility="invisible"/>

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/tv_ago"
        android:text="历史搜索"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tl_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lv_ago"
        android:layout_below="@id/tv_ago"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <Button
        android:background="@drawable/shape_btn_bg"
        android:id="@+id/btn_clear"
        android:textSize="14dp"
        android:text="清空历史搜索"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_ago"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
