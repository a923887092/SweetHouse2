<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gwm.sweethouse.WalletRecorderActivity">

    <RelativeLayout
        android:id="@+id/top_walletRecords"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0000">
        <ImageButton
            android:id="@+id/ibtn_walletToMy"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow_return"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易记录"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <com.gwm.sweethouse.ZList.ZListView
        android:id="@+id/lv_bills"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_walletRecords"
        android:divider="#DBDBDB"
        android:dividerHeight="1dp"
        android:headerDividersEnabled="true"/>
    <!--<ProgressBar
        android:id="@+id/pb_loadBills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/tv_noBills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="您还没有账单"/>-->

</RelativeLayout>
