<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gwm.sweethouse.MyWalletActivity">

    <RelativeLayout
        android:id="@+id/top_myWallet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0000">
        <ImageButton
            android:id="@+id/ibtn_walletToMy"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow_return"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的钱包"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_walletBg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_wallet"
        android:layout_below="@id/top_myWallet">
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额："
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.0"
            android:textSize="30sp"

            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:layout_toRightOf="@+id/tv_money"
            android:layout_marginTop="45dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_aboutWallet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rl_walletBg"
        android:background="@drawable/shape_layout">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_my_wallet"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于钱包"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:id="@+id/textView6" />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:background="@drawable/arrow_right"
            android:layout_marginRight="34dp"
            android:layout_marginEnd="34dp"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_WalletRecorder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rl_aboutWallet">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_my_bill"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的账单"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
           />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:background="@drawable/arrow_right"
            android:layout_marginRight="34dp"
            android:layout_marginEnd="34dp"
           android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ccc"
        android:layout_below="@id/rl_WalletRecorder"/>
</RelativeLayout>
